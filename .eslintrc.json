{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": {"var": 2, "let": 2, "const": 3},
        "CallExpression": {"arguments": "first"},
        "ArrayExpression": "first"
      }
    ],
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    // "quotes": ["error", "double", {"avoidEscape": true}],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 70 }],
    "no-tabs": "error"
  }
}
